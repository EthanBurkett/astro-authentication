---
interface Props {
  type: string;
  name?: string;
  placeholder?: string;
  defaultValue?: string;
  label?: string;
}

const { type, placeholder, defaultValue, name, label } = Astro.props;
---

{
  label && (
    <>
      <label for={name as any} class="text-lg">
        {label}
      </label>
      <input
        name={name as any}
        type={type as any}
        placeholder={placeholder || ""}
        value={defaultValue || ""}
        class="bg-neutral-200 dark:bg-neutral-700 px-4 py-2 rounded-md shadow-sm outline-none focus:ring-2 ring-brand focus:outline-none transition-all duration-300 ease-in-out"
      />
    </>
  )
}
