---
import { twMerge } from "tailwind-merge";
import { clsx } from "clsx";

interface Props {
  href?: string;
  className?: string;
}

const { className, href } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      target="_blank"
      class={twMerge(
        clsx(
          "transition-all text-foreground-light font-bold rounded-xl px-4 py-2 button-gradient shadow-lg text-white",
          className,
        ),
      )}
    >
      <slot />
    </a>
  ) : (
    <button
      class={twMerge(
        clsx(
          "transition-all text-foreground-light font-bold rounded-xl px-4 py-2 button-gradient shadow-lg text-white",
          className,
        ),
      )}
    >
      <slot />
    </button>
  )
}

<style is:global>
  .button-gradient {
    @apply from-brand-200 to-blue-400 bg-gradient-to-tr transition-all bg-grad-size hover:bg-grad-pos-end;
  }
</style>
